<BorderPane fx:id="root" stylesheets="@portada.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iescamp.tienda.PortadaController">
   <top>
      <HBox id="h-box-header" fx:id="hbHeader" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="imgPortada" alignment="CENTER_LEFT" prefHeight="61.0" prefWidth="271.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="menuButton" fitHeight="39.0" fitWidth="43.0" onMouseClicked="#onMenu" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/menu.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView id="imgLogo" fx:id="imgSecondHand" fitHeight="61.0" fitWidth="439.0" onMouseClicked="#onInicio" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/image-removebg-preview.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="61.0" prefWidth="152.0" style="-fx-spacing: 20px;" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView id="imgLupa" fx:id="imgLupa" fitHeight="47.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true" styleClass="icon-header">
                     <image>
                        <Image url="@images/lupa.png" />
                     </image>
                  </ImageView>
                  <TextField fx:id="tfBuscar" alignment="BOTTOM_LEFT" promptText="Buscar" />
                  <ImageView id="imgUser" fx:id="imgUser" fitHeight="43.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true" styleClass="icon-header">
                     <image>
                        <Image url="@images/usuario.png" />
                     </image>
                  </ImageView>
                  <ImageView id="ImgShop" fx:id="imgCarro" fitHeight="53.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true" styleClass="icon-header">
                     <image>
                        <Image url="@images/carrito-de-compras.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>

   <center>
      <HBox BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
            <VBox id="Ropa" fx:id="imgRopa" alignment="CENTER" onMouseClicked="#onRopa" prefHeight="573.0" prefWidth="382.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label onMouseClicked="#onRopa" text="Ropa">
                     <font>
                        <Font name="Constantia" size="70.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox id="Accesorios" alignment="CENTER" onMouseClicked="#onAccesorios" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Accesorios" textFill="WHITE">
                     <font>
                        <Font name="Constantia" size="68.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>

   <bottom>
      <HBox id="Creadores" alignment="CENTER" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
            <VBox prefHeight="136.0" prefWidth="1459.0">
               <children>
                  <HBox id="Footer" prefHeight="155.0" />
                  <VBox id="AyudaInfoVbox" onMouseClicked="#onRopa" prefHeight="121.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="TextoAyuda" text="Preguntas frecuentes" textFill="WHITE" />
                        <Label styleClass="TextoAyuda" text="Preguntas frecuentes" textFill="WHITE" />
                        <Label styleClass="TextoAyuda" text="Preguntas frecuentes" textFill="WHITE" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="143.0">
                     <children>
                        <Label text="AplicaciÃ³n desarrollada por Miguel Grau, Walid Essaidi y Alba Rumeu">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>

   <left>
      <VBox id="menu" fx:id="vboxMenu" prefHeight="573.0" prefWidth="0.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="84.0" prefWidth="214.0" styleClass="textoMenu" text="Label" />
            <Label prefHeight="82.0" prefWidth="134.0" styleClass="textoMenu" text="Label" />
         </children>
      </VBox>
   </left>
</BorderPane>
